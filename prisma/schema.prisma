generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model siswa {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  kode       String   @unique
  nama       String
  jk         String
  hp         String
  sekolah    String
  ip         String
  alamatId   String   @db.ObjectId
  alamat     alamat   @relation(fields: [alamatId], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model alamat {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  siswa      siswa[]
  provinsi   String
  kabkot     String
  kecamatan  String
  keldes     String
  rt         Int
  rw         Int
  alamat     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
