// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model siswa {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  nomor        String      @unique
  kode         String      @unique
  nama         String
  jk           String
  hp           String
  sekolah      String
  ip           String
  alamatId     String      @db.ObjectId
  alamat       alamat      @relation(fields: [alamatId], references: [id])
  pembayaranId String?     @db.ObjectId
  pembayaran   pembayaran? @relation(fields: [pembayaranId], references: [id])
  gelombangId  String?     @db.ObjectId
  gelombang    gelombang?  @relation(fields: [gelombangId], references: [id])
  panitiaId    String?     @db.ObjectId
  panitia      user?       @relation(fields: [panitiaId], references: [id])
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt
}

model gelombang {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  siswa      siswa[]
  periode    String
  nama       String
  keterangan String
  biaya      String
  active     Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model pembayaran {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  siswa      siswa[]
  status     String
  bukti      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model alamat {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  siswa      siswa[]
  provinsi   String
  kabkot     String
  kecamatan  String
  keldes     String
  rt         Int
  rw         Int
  alamat     String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model user {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  username   String   @unique
  password   String
  nama       String
  role       String
  siswa      siswa[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model settingan {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  nama       String   @unique
  value      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
